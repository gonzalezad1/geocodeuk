<p id="notice"><%= notice %></p>

<h1>Offices</h1>

<%= form_tag offices_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search_postcode, params[:search_postcode] %>
      <%= text_field_tag :search_radius, params[:search_radius] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Address</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offices.each do |office| %>
      <tr>
        <td><%= office.name %></td>
        <td><%= office.lat %></td>
        <td><%= office.lng %></td>
        <td><%= office.address %></td>
        <td><%= office.postcode %></td>
        <td><%= link_to 'Show', office %></td>
        <td><%= link_to 'Edit', edit_office_path(office) %></td>
        <td><%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Office', new_office_path %>
